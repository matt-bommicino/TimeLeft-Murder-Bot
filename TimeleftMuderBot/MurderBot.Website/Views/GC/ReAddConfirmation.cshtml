@model ReAddViewModel

@{
    ViewBag.Title = "Rejoin Confirmation";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h2 class="text-success">Request Received</h2>
                    <p>Your request to rejoin the group has been received. The Murder Bot will direct message you status updates.</p>
                    <hr />
                    <p><strong>Group Name:</strong> @Model.GroupName</p>
                    <p><strong>Your Phone Number:</strong> @Model.PhoneNumber</p>
                    <p><strong>Request Time:</strong> @Model.RejoinTime.GetValueOrDefault().ToString("MM/dd/yyyy h:mm tt")</p>
                    <hr />
                    <p class="mt-3">
                        <em>We look forward to your active participation!</em>
                    </p>
                    <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
